depend() {
	need hcid
}

start() {
	ebegin "Starting hidd"
	start-stop-daemon --start --quiet \
		--exec /usr/bin/hidd -- ${HIDD_OPTIONS} --server
	eend $?
}

stop() {
	ebegin "Stopping hidd"
	hidd --killall
	start-stop-daemon --stop --quiet --exec /usr/bin/hidd
	eend $?
}

