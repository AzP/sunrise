-    for SCRIPT in /etc/acpi/start.d/*.sh; do
-	. $SCRIPT
-    done
-    log_end_msg 0
-    ;;
-  stop)
-    log_begin_msg "Disabling power management..."
-    if [ `echo /proc/acpi/ac_adapter/*` ]; then
-	/etc/acpi/power.sh stop
-    fi
-    log_end_msg 0
-    ;;
-  *)
