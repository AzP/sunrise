# $Header: $

start() {
	if pidof fms >/dev/null; then
		eerror "FMS already running"
		eend 1
	else
		cd /var/freenet/fms
		su -s /bin/sh -c "./fms --daemon" freenet
		eend $?
	fi
}

stop() {
	pkill -u freenet -f "fms --daemon"
	eend 0
}
