PID=/var/run/istatd/istat.pid

start() {
	ebegin "Starting istatd"
	start-stop-daemon --start \
		--exec /usr/bin/istatd \
		--make-pidfile \
		--chuid istatd:istatd \
		--pidfile ${PID} \
		--background \
		-- "${ISTATD_OPTS}" \
		>> /var/log/istatd 2>&1
	eend $?
}

stop() {
	ebegin "Stopping istatd"
	start-stop-daemon --stop \
		--pidfile ${PID}
	eend $?
}
